<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="es.source.code.activity.Activity.FoodOrderView">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/list_order_view"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#008A00"
            android:background="#CDC1C5"
            android:id="@+id/tv_foodorder_view_foodsum"
            android:text="菜品总数
                                    8"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#008A00"
            android:background="#CD78C5"
            android:id="@+id/tv_foodorder_view_pricesum"
            android:text="菜单总价:
                             345"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:focusable="false"
            android:background="#CD90C5"
            android:id="@+id/btn_foodorder_view_order"
            android:text="结账"/>
    </LinearLayout>

</LinearLayout>
