<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lenovo.mm.EmailActivity" >


    <EditText
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:id="@+id/et_help_email"
        android:hint="邮件标题"
        android:textSize="25sp"
        android:textColor="#008A00"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:id="@+id/et_help_email_content"
        android:hint="邮件内容"
        android:textSize="25sp"
        android:textColor="#008A00"
        android:layout_below="@+id/et_help_email"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送"
        android:id="@+id/btn_help__email_send"
        android:background="#E0FFFF"
        android:layout_below="@+id/et_help_email_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />



</RelativeLayout>