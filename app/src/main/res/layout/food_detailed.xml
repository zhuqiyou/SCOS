<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.source.code.activity.Activity.FoodDetailed">


    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/imageView"
        android:src="@drawable/shuizhuyu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/food_item_name"
        android:text="名字"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />
    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/food_item_price"
        android:text="价格"
        android:layout_alignTop="@+id/food_item_name"
        android:layout_alignEnd="@+id/imageView" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/food_item_notes"
        android:text="备注"
        android:layout_below="@+id/food_item_name"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点菜"
        android:id="@+id/btn_food_detail"
        android:layout_below="@+id/food_item_notes"
        android:layout_alignParentStart="true" />
</RelativeLayout>
